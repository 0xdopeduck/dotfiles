# Package manager

## Archlinux
alias aup='sudo pacman -Syyu'
alias ain='sudo pacman -S'
alias asearch='pacman -Ss'
alias aremove='sudo pacman -Rns'

# APT/Debian
alias dup='sudo apt update && sudo apt upgrade'
alias din='sudo apt install'
alias dsearch='apt search'
alias dremove='sudo apt purge'

# distrobox
alias de='distrobox enter'

# NixOS
alias nin='nix-env -iA '
alias nsearch='nix-env --query --available --attr-path'
alias nremove='nix-env --uninstall '
alias rebuild='sudo nixos-rebuild switch --flake /etc/nixos#nixos'
alias ngc='nix-collect-garbage -d'

# Programs
alias rr='ranger'
alias ls='lsd -1'
alias k='kubectl'

