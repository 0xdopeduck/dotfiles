# Global properties
separator=true
separator_block_width=15

[IP_Address]
color=#afd700
command=hostname -i | awk '{ print "IP " $1 }'
interval=once

[VPN_IP_Address]
color=#ffaf00
command=hostname -i | awk '{ print "VPN " $2 }'
interval=10

[date]
color=#5fafd7
command=date '+%a %d %b %I:%M %p '
interval=50

